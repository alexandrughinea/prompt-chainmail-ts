{
  "name": "prompt-chainmail",
  "version": "0.6.12",
  "description": "Security middleware that shields AI applications from prompt injection, jailbreaking, and obfuscated attacks through composable defense layers.",
  "type": "module",
  "main": "./dist/prompt-chainmail.cjs.js",
  "module": "./dist/prompt-chainmail.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/prompt-chainmail.es.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/prompt-chainmail.cjs.js"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build && npm run build:types",
    "build:types": "tsc --emitDeclarationOnly --outDir dist",
    "dev": "vite build --watch",
    "test": "vitest -t \"^(?!.*Performance).*$\"",
    "test:ci": "vitest run -t \"^(?!.*Performance).*$\"",
    "test:perf": "vitest --grep \"Performance\"",
    "test:perf:ci": "vitest run --grep \"Performance\"",
    "test:all": "vitest",
    "test:ui": "vitest --ui",
    "coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "security": "semgrep --config=.semgrep.yml src/",
    "prepare": "husky",
    "prepublishOnly": "npm run build && npm run test:ci",
    "publish:npm": "npm publish",
    "publish:jsr": "npx jsr publish",
    "publish:all": "npm run publish:npm && npm run publish:jsr"
  },
  "keywords": [
    "prompt-injection",
    "security",
    "middleware",
    "chainmail",
    "ai-security",
    "llm-protection",
    "pipeline",
    "rivets",
    "typescript"
  ],
  "author": "alexandrughinea <alexandrughinea.dev+prompt-chainmail@gmail.com>",
  "license": "BSL-1.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/alexandrughinea/prompt-chainmail-ts.git"
  },
  "bugs": {
    "url": "https://github.com/alexandrughinea/prompt-chainmail-ts/issues"
  },
  "homepage": "https://github.com/alexandrughinea/prompt-chainmail-ts#readme",
  "devDependencies": {
    "@types/node": "^24.3.1",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.35.0",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "vite": "^7.1.5",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "franc": "^6.2.0"
  },
  "publishConfig": {
    "provenance": true
  }
}
